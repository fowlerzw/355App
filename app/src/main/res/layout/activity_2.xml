<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mario8bitbackgroundfinal"
        android:contentDescription="background for page"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:fontFamily="@font/press_start_2p"
                android:text="What are you feeling?"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/priceButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/textView4">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/button4"
                    android:background="@drawable/unselectedbricksolo"
                    android:fontFamily="@font/press_start_2p"
                    android:text="$$$"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:layout_toLeftOf="@id/button4"
                    android:background="@drawable/unselectedbricksolo"
                    android:fontFamily="@font/press_start_2p"
                    android:text="$"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="2dp"
                    android:background="@drawable/unselectedbricksolo"
                    android:fontFamily="@font/press_start_2p"
                    android:text="$$"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/press_start_2p"
                android:text="Price"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.095" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:fontFamily="@font/press_start_2p"
                android:text="Style"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/priceButtonLayout" />

            <RelativeLayout
                android:id="@+id/StyleButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/textView5">

                <Button
                    android:id="@+id/button11"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:layout_toLeftOf="@id/button7"
                    android:background="@drawable/unselectedbrickpair"
                    android:fontFamily="@font/press_start_2p"
                    android:text="Dine In"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:layout_toRightOf="@id/button7"
                    android:background="@drawable/unselectedbrickpair"
                    android:fontFamily="@font/press_start_2p"
                    android:text="Delivery"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="1dp"
                    android:background="@drawable/unselectedbrickpair"
                    android:fontFamily="@font/press_start_2p"
                    android:text="Takeout"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />


            </RelativeLayout>


            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:fontFamily="@font/press_start_2p"
                android:text="Number of People"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/StyleButtonLayout" />

            <RelativeLayout
                android:id="@+id/GroupLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textView9">

                <Button
                    android:id="@+id/button8"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:layout_toLeftOf="@id/button10"
                    android:background="@drawable/unselectedbrickpair"
                    android:fontFamily="@font/press_start_2p"
                    android:text="Solo"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:layout_toRightOf="@id/button10"
                    android:background="@drawable/unselectedbrickpair"
                    android:fontFamily="@font/press_start_2p"
                    android:text="Group"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="1dp"
                    android:background="@drawable/unselectedbrickpair"
                    android:fontFamily="@font/press_start_2p"
                    android:text="Pair"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />


            </RelativeLayout>

            <EditText
                android:id="@+id/ZipCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:hint="Enter Zip Code"
                android:textColorHint="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/GroupLayout"
                android:layout_marginTop="10dp"
                android:background="#cb741c"
                />

            <Button
                android:id="@+id/button14"
                android:layout_width="151dp"
                android:layout_height="160dp"
                android:background="@drawable/coin8bit_final"
                android:fontFamily="@font/press_start_2p"
                android:onClick="openActivity4"
                android:text="Flip"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ZipCode"
                android:layout_marginTop="10dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/tipsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        >

        <Button
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/tips_button"
            android:longClickable="true"
            android:onClick="openActivity3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/press_start_2p"
            android:layout_below="@id/button2"
            android:layout_marginTop="25dp"
            android:text="Tips"
            android:textColor="#000000" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>