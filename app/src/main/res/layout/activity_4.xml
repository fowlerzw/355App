<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B8FC5"
    tools:context=".Activity4">

    <Button
        android:id="@+id/button15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ReRoll (inactive)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.688" />

    <Button
        android:id="@+id/button16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Act Main (Start over)"
        android:onClick="openActivityMain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.792" />

    <Button
        android:id="@+id/button17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repick (Filters)"
        android:onClick="openActivity2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.898" />

    <Button
        android:id="@+id/button18"
        android:layout_width="103dp"
        android:layout_height="36dp"
        android:layout_marginTop="36dp"
        android:onClick="openActivity3"
        android:text="Tips (Act3)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="193dp"
        android:layout_height="59dp"
        android:text="Act 4 (Roll Page)"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:id="@+id/SelectionsLayout" >

        <TextView
            android:id="@+id/PriceHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Price"
            />
        <TextView
            android:id="@+id/PriceSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@android:color/holo_blue_light"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@id/PriceHeader"
            />
        <TextView
            android:id="@+id/StyleHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Style"
            android:textSize="16dp"
            android:layout_below="@id/PriceHeader"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/StyleSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/PriceSelection"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/StyleHeader"
            android:clickable="false"
            android:text="Take-Out"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/GroupHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Group Size"
            android:layout_below="@id/StyleHeader"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/GroupSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Solo"
            android:textColor="@android:color/holo_blue_light"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/GroupHeader"
            android:layout_below="@id/StyleSelection"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/FoodHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Food Type"
            android:layout_below="@id/GroupHeader"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/FoodSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="American
"
            android:textColor="@android:color/holo_blue_light"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/FoodHeader"
            android:layout_below="@id/GroupSelection"
            android:layout_marginTop="10dp"
            />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>